{
	"compilerOptions": {
		"target": "ESNext",
		"allowJs": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"strict": true,
		"declaration": true,
		"skipLibCheck": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitAny": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
